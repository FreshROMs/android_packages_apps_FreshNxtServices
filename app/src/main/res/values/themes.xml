<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns2="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.Zest" parent="@style/OneUITheme" />

    <style name="ZestPerformanceMode">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:minHeight">46.5dip</item>
    </style>
    <style name="RadioButtonListDivider">
        <item name="android:background">@color/sesl_list_divider_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2.0px</item>
        <item name="android:layout_marginStart">68.0dip</item>
        <item name="android:layout_marginEnd">20.0dip</item>
    </style>
    <style name="ZestQsDetailRadioButton" parent="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Fresh.OTA.Button" parent="@style/ButtonStyle">
        <item name="android:paddingHorizontal">84dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">@dimen/sesl_button_text_size</item>
    </style>
    <style name="Fresh.OTA.Button.Colored" parent="@style/Fresh.OTA.Button">
        <item name="android:backgroundTint">@color/sesl_btn_color_state</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>